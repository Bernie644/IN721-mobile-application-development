<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/album_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginLeft="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_4"
        android:contentDescription="@string/album_image"
        android:padding="@dimen/padding_8"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_album_black_24" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/album_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginLeft="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_8"
        android:textSize="@dimen/size_16"
        app:layout_constraintStart_toEndOf="@+id/album_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/album_play_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginLeft="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_4"
        android:textSize="@dimen/size_16"
        app:layout_constraintStart_toEndOf="@+id/album_image_view"
        app:layout_constraintTop_toBottomOf="@+id/album_name_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
